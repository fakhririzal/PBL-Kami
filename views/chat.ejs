<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Chat</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>

    <!-- Login -->

    <div class="container w-25" id="loginContainer">
        <H3 class="fst-italic mt-5 mb-4 text-center"><%= title %></H3>
        <div class="container login-container">
            <div class="card">
              <div class="card-body">
                  <div class="form-group">
                    <label for="nama">Nama</label>
                    <!-- Menggunakan form-control untuk input dengan Bootstrap styling -->
                    <input type="nama" class="form-control" id="nama" name="nama" placeholder="Enter nama" required>
                  </div>
                  <div class="form-group mt-2">
                    <label for="password">Password:</label>
                    <!-- Menggunakan form-control untuk input password -->
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" name="password" required>
                  </div>
                  <!-- Menggunakan Bootstrap Button untuk tombol login -->
                  <button type="submit" class="btn btn-primary btn-block mt-3" id="loginButton">Login</button>
            </div>
            <p class="mt-3 text-center ">Don't have an account?</p>
                <a href="/" class="btn btn-info mt-0">Register here</a>
            </div>
          </div>

    </div>

    <!-- Dashboard -->
    
    <div class="container-fluid dashboard-container" id="dashboarContainer">
        <!-- Sidebar -->
        <div class="sidebar">
          <h4>Dashboard Menu</h4>
          <ul class="list-unstyled">
            <li><a href="dashboard.html">Dashboard</a></li>
            <li><a href="chat.html" id="chatForum">Chat</a></li>
            <li><a href="enkripsi.html">Enkripsi</a></li>
            <li><a href="Loqout.html">Loqout</a></li>
          </ul>
        </div>
      
        <!-- Content -->
        <div class="content">
          pbl sampe mampus
        </div>
      </div>

      <!-- Chat -->

     

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <script>
        const dashboarContainer = document.getElementById("dashboarContainer")
        const loginContainer = document.getElementById("loginContainer")

        dashboarContainer.style.display = "none"

        loginButton.addEventListener("click", (e) => {
            e.preventDefault()
            dashboarContainer.style.display = "block"
            loginContainer.style.display = "none"
        })
    </script>

</body>
</html>